   '( * 0 1 * * * )
   '( * 0 * * * * )
   '( * * * * * *))
  )

;;;----------------------------------------------------------------|
;;;  -------    DefiniÃ§Ã£o da estrutura MERGULHADOR   --------------|
;;;  ------------       uma lista dinÃ¡minca       -----------------|
;------------------------------------------------------------------|
;;; O primeiro nÃ³ recebe um tabuleiro e devolve um nÃ³
(defun mergulhador (tab &optional
                    (espaco tab)
		    (mergul-id 1)
		    (origem '(3 3))
		    (pos-atual(coord-merg tab))
		    (pos-antes nil)
		    (f-aval 0)
		    )
  (list 
   espaco         ;; espaÃ§o de busca para o mergulhador
   mergul-id       ;; um mergulhador ou um agente
   origem          ;; a posiÃ§Ã£o inicial do mergulhador ex:(x y)
   pos-atual       ;; a posiÃ§Ã£o dum mergulhador atualmente
   pos-antes      ;; lista ordenada ds movimentos jÃ¡ executados
   f-aval          ;; funÃ§Ã£o de avaliaÃ§Ã£o do mergulhador
   )
  )



;; funÃ§Ã£o objetivo
(defun f-obj (no &optional (tab (car no)) (lst (car tab)) (col (length (car tab))) (lin 1))
  "Recebe um espaÃ§o de busca e devolve uma lista com as coordenadas dos objetivos "
  (let ((nlin (length tab)) (ncol (length (car tab))))
    (cond
     ((> lin nlin) nil)
     ((= col 0) (f-obj no tab lst (+ col ncol) (1+ lin)))
     ((eql (devol-ele col (devol-lin lin tab)) 0) ;; se encontra um objetivo, mover a origem para + proximo
      (cons (list 't-> col lin) (f-obj no tab (cdr lst) (1- col) lin)))
     (t (f-obj no tab (cdr lst) (1- col) lin))
     )
    )
  )


