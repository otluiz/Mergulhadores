;;;Â«Â«Â«Â«Â«Â«Â«Â«Â«Â«Â«Â«Â«Â«Â«Â«Â«Â«Â«Â«Â«Â«  funcoes para operar no tabuleiro  Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»

;;;----------------------------------------------------------------------------------------
;;; esta funcao inverte a coordenada da funcao Â«nthÂ» conforme os parametro do projecto que 
;;; expecificam a coordenada Â«1:1Â» como o canto inferior esquerdo do tabuleiro.
;;; retorna como primeira linha a do canto inferior esquerdo
;;;-----------------------------------------------------------------------------------------
(defun devol-lin (coord tab)
" devolve uma linha de um tabuleiro conforme um indice invertido"
  (cond
    ((null tab) (car tab))
    (t (nth (- (length tab) coord) tab))
    )
  )


;;;-----------------------------------------------------------------------------------------
;;; esta funcao utliza a funcao acima para retornar, conforme os parametro do projecto que 
;;; expecificam a coordenada Â«1:1Â» como o canto inferior esquerdo do tabuleiro
;;; retorna como primeiro elemento, a coordenada Â«1:1Â» (e nao o 0 como a funcao nth)
;;;-----------------------------------------------------------------------------------------

(defun devol-ele (n lst)
"devolve um elemento de uma lista, a primeira posicao xy da lista = 1"
  (cond
    ((= 1 n) (car lst))
    (t (devol-ele (1- n) (cdr lst))))
  )



;;;---------------------------------------------------------------------------------------
;;; esta funÃ§Ã£o recebe um numero, uma lista e um elemento e substitui o n-Ã©nesimo
;;; elemento com posiÃ§Ã£o Â«nÂ» pelo elemento Â«elemÂ» da lista Â«lstÂ», a posiÃ§Ã£o n=1
;;; serÃ¡ o primeiro elemento da lista Â«lstÂ» conforme os critÃ©rios do proejecto 
;;;---------------------------------------------------------------------------------------

(defun subs-n-esimo(n lst elem)
  (cond
    ((= 1 n) (cons elem (cdr lst)))
    (t (cons (car lst) (subs-n-esimo (1- n) (cdr lst) elem)))
    )
  )


;;;----------------------------------------------------------------------------------------
;;; verifica as validade das coordenadas Â«xÂ»:Â«yÂ» (parametros da 
;;; funÃ§Ã£o abaixo; retorna t 'TRUE' ou nil 'FALSE', para um tabuleiro
;;;----------------------------------------------------------------------------------------

(defun coord-valida?(x y tab)
  "verifica as validade dos parametros Â«coord-vÂ»:Â«coord-hÂ» "
  (and (>= x 1) (<= x (length (car tab))) ;; retorna verdadeiro
       (>= y 1) (<= y (length tab))       ;; retorna verdadeiro
       (or                                ;; retorna verdadeiro ou um ou outro
        (eql (devol-ele x (devol-lin y tab)) '-);; * um lugar(coordenada) nÃ£o ocupado
        (eql (devol-ele x (devol-lin y tab)) '*))
       )
  )


;;;---------------------------------------------------------------------------------------
;;; verifica a peca da coordenada Â«x:yÂ» :: m (lugar com mergulhador),
;;; retorna t (TRUE) ou nil (falso).
;;;---------------------------------------------------------------------------------------

(defun posso-mover? (x y tab)
"verifica a funÃ§Ã£o: Â«coord-valida? (x:y)Â» esta valida"
  (cond
    ;((null tab) nil)
   ((eql (devol-ele x (devol-lin y tab)) 1))
   (t nil)
   )
  )


;;;---------------------------------------------------------------------------------------
;;; funcÃµes para substituir uma peÃ§a  Â«x:yÂ» por outra, ex: lugar ocupado pelo mergulhador
;;; retorna um tabuleiro actualizado com o mergulhador marcado
;;;---------------------------------------------------------------------------------------

(defun poe-x(x y tab) ;; serve para marcar as evidÃªncias no tabuleiro
"esta funÃ§Ã£o mete um 'X'  numa coordenada (x y) do tabuleiro"
  (if (null tab) nil
      (reverse (subs-n-esimo y (reverse tab) (subs-n-esimo x (devol-lin y tab) 'X))))
  )

(defun poe-a(x y tab) ;; serve para marcar os lugares jÃ¡ visitados pelo mergulhador
"esta funÃ§Ã£o mete um '-'  numa coordenada (x y) do tabuleiro"
  (if (null tab) nil
      (reverse (subs-n-esimo y (reverse tab) (subs-n-esimo x (devol-lin y tab) '-))))
  )

(defun poe-mergulhador(x y tab) ;; serve para marcar o lugar onde estÃ¡ o mergulhador
"esta funÃ§Ã£o mete um '1' id do mergulhador, numa coordenada (x y) do tabuleiro"
  (if (null tab) nil
      (reverse (subs-n-esimo y (reverse tab) (subs-n-esimo x (devol-lin y tab) 1))))
  )


;;;------------   movimentos simples sobre o espaÃ§o de busca  ---------------------------

;;; Â«Â« a direita Â»Â»
;;; mete um mergulhador, a um nÃºmero determinado pela variavel VAL, de posicoes Ã  direita
(defun direita (x y tab &optional (val 1) (col x) (pos-col (+ val x)))
  "esta funÃ§Ã£o mete um 'M' na coordenada (+ x y) e "-" na (x y) a direita "
  (let ((ncol (length (car tab))))
    (cond
     ((< val 1) tab)
     ;((= col (+ val x)) tab)
     ((and (< col ncol) (coord-valida? (+ x val) y tab))
      (direita x y (poe-a col y (poe-mergulhador pos-col y tab)) (1- val) (1+ col) pos-col)) ;; anda + um passo
     (t nil))
    )
  )

;;; Â«Â« a esquerda Â»Â»
;;; mete um mergulhador, a um nÃºmero determinado pela variavel VAL, de posicoes Ã  esquerda
(defun esquerda (x y tab &optional (val 1) (col x) (pos-col (- x val)))
"esta funÃ§Ã£o mete um 'M' na coordenada (x y) Ã  esquerda "
    (cond
     ((< val 1) tab)
     ;((= col (- x val)) tab)
     ((and (coord-valida? (- x val) y tab)) ;;(posso-mover? x y tab))
      (esquerda x y (poe-a col y (poe-mergulhador pos-col y tab)) (1- val) (1- col) pos-col))
     (t nil))
    )


;;; Â«Â« abaixo Â»Â»
;;; mete um mergulhador, a um nÃºmero determinado pela variavel VAL, de posicoes abaixo
(defun abaixo (x y tab &optional (val 1) (lin y) (pos-lin (- y val)))
  "esta funÃ§Ã£o mete um 'M' na coordenada (x y) abaixo "
  (let ((xx x) (yy y))
  (cond
   ((< val 1) tab)
   ((and (coord-valida? xx (- yy val) tab)); (posso-mover? xx yy tab))
    (abaixo x y (poe-a xx lin (poe-mergulhador xx pos-lin tab)) (1- val) (1- lin) pos-lin))
   (t nil))
    )
  )

;;; Â«Â« acima Â»Â»
;;; mete um mergulhador, a um nÃºmero determinado pela variavel VAL, de posicoes acima
(defun acima (x y tab &optional (val 1) (lin y) (pos-lin (+ y val)))
"esta funÃ§Ã£o mete um 'M' na coordenada (x y) acima "
  (cond
    ((< val 1) tab)
    ((and (coord-valida? x (+ y val) tab)) ;;(posso-mover? x y tab))
       (acima x y (poe-a x lin (poe-mergulhador x pos-lin tab)) (1- val) (1+ lin) pos-lin))
    (t nil))
  )


;;;----------------------Â«Â«Â«Â« para espirais quadradas Â»Â»Â»Â»------------------------------------------- 

;;; sestra -> gira para esquerda: acima->direita->abaixo->esquerda...
;;; roda uma lista de argumentos, para a esquerda
;;; ---------------------------Â» espiral esquerda => sestra
(defun left-rotate(lista)
  "move o 1Âº elemento para o fim da lista"
  (append (rest lista) (list (first lista)))
  )

;;; destra -> gira para direita: acima->esquerda->abaixo->direita...  
;;; roda uma lista de argumentos, para a direita
;;; ---------------------------Â» espiral direita => destra
(defun right-rotate(lista)
  "move o ultimo elemento para a frente da lista"
  (append (last lista) (butlast lista))
  )



;; funcao cria uma lista com as coordenadas (x,y) dos mergulhadores
(defun coord-merg (tab &optional (lst (car tab)) (col (length (car tab))) (lin 1))
  "Recebe um espaÃ§o de busca e devolve uma lista com as coordenadas dos mergulhadores "
  (let ((nlin (length tab)) (ncol (length (car tab))))
  (cond
    ((> lin nlin) nil)
    ((= col 0) (coord-merg tab lst (+ col ncol) (1+ lin)))
    ((eql (devol-ele col (devol-lin lin tab)) 1)
     (cons (list col lin) (coord-merg tab (cdr lst) (1- col) lin)))
    (t (coord-merg tab (cdr lst) (1- col) lin))
    )
  )
 )


;;; recebe um nÃ³ e devolve um nÃ³ com os movimentos aplicados
;;; mergulhador : um mergulhador => um nÃ³
;;; n-giros : numero de voltas ao entorno da origem
;;; cvoltas : um contador de voltas
(defun destra (no &optional (n-giros 1) (tab (car no)))
  (let ((lst-jog '(direita abaixo esquerda acima))
        ;(c-voltas (coord-espiral nvoltas))
        (c-mergul (coord-merg tab))
        ) ;; devo atualizar o valor da posição primeiro, melhora ??
    (cond
     ((< n-giros 1) no)
     (t
      (destra
       (push 
        (list
         (funcall (car (right-rotate lst-jog)) (caar c-mergul) (cadar c-mergul) tab)
         (cadr no);;; id do mergulhador
         (caddr no);; origem do movimento
         (list (caar c-mergul) (cadar c-mergul)); (cadddr no)); posicao atual
         (fifth no);; posicao anterior
         (sixth no);; funcao de avaliacao
        ) no) (1- n-giros) tab))
     )
    )
  )


